<!-- HALAMAN UNTUK USER MELIHAT BUKU (HOME PAGE USER DIALIHKAN DI ROUTE BERBEDA TETAPI TAMPILAN TETAP SAMA DENGAN ADMIN / HANYA HOME DAN LOGOUT) -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Daftar Anggota</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
    
        <a class="navbar-brand" href="#">Gubuk Sastra</a>
        
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/book-view">Daftar Buku</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/loan-view">Pinjam</a>
                </li>
    
                <li class="nav-item">
                    <a class="nav-link" href="/data-anggota">Data Anggota</a>
                </li>
            </ul>
    
            <form class="d-flex" action="/logout" method="POST">
                <button class="btn btn-outline-danger" type="submit">Logout</button>
              </form>
        </div>
    </nav>

<div class="container my-5">
  <h1 class="mb-4">Data Anggota</h1>
  <div class="row g-4">
    <% users.forEach(users => { %>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= users.nama_lengkap %></h5>
          <p class="card-text">
            <strong>Jenis Kelamin:</strong> <%= users.jenis_kelamin %><br>
            <strong>alamat:</strong> <%= users.alamat %><br>
          </p>
        </div>
      </div>
    </div>
    <% }); %>
  </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
